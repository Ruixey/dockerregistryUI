<?xml version="1.0" encoding="UTF-8"?>

<!-- TESTING CONFIGURATION ONLY! Uses HSQL when running a local deployment in Eclipse. Is ignored during Maven builds. -->

<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="tools.descartes.dockerregistryui.persistence" transaction-type="RESOURCE_LOCAL">
		<class>tools.descartes.dockerregistryui.persistence.ImageDescription</class>
		<class>tools.descartes.dockerregistryui.persistence.ImageCategory</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />
			<!-- <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:test" /> -->
			<property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:file:/var/lib/dockerregistryui/dockerregistryuidb" />
			<property name="javax.persistence.jdbc.user" value="sa" />
			<property name="javax.persistence.jdbc.password" value="" />
        	<property name="eclipselink.logging.level" value="INFO" />
      		<property name="eclipselink.ddl-generation" value="create-tables"/>
      		<property name="eclipselink.ddl-generation.output-mode" value="database" />
     	</properties>
	</persistence-unit>
</persistence>
