<!DOCTYPE html>
<html>
<head>
    <title>{{.Settings.RegistryHostName}} UI</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="{{.Settings.ContextRoot}}/static/favicon.png">

    <style>
        body {
            padding-top: 70px;
        }
        .image-card {
            border: 1px solid #ddd;
            border-radius: 6px;
            padding: 15px;
            margin-bottom: 20px;
            background-color: #f9f9f9;
        }
        .image-name {
            font-weight: bold;
            font-size: 18px;
        }
        .image-tags {
            color: #555;
            margin-top: 5px;
            word-wrap: break-word;
        }
        @media (min-width: 768px) {
            .image-name, .image-tags {
                display: inline-block;
                vertical-align: top;
            }
            .image-name {
                width: 30%;
            }
            .image-tags {
                width: 68%;
                margin-left: 2%;
            }
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{.Settings.ContextRoot}}/">{{.Settings.RegistryHostName}}</a>
            </div>
        </div>
    </nav>

    <!-- Content -->
    <div class="container">
        <div id="images" class="row">
            {{range .Images}}
            <div class="col-xs-12 image-card">
                <div class="image-name">{{.Name}}</div>
                <div class="image-tags">{{.FormattedTags}}</div>
            </div>
            {{end}}
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</body>
</html>
